<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="history">

    <!-- 사번과 년도가 같은 경우의 모든 leave_history 요소들을 가져오는 쿼리 -->

    <select id="remain_Vac" parameterType="Map" resultType="vo.Leave_historyVO">

        SELECT * FROM team_db.leave_history where empno = #{empno} and year = #{year}

    </select>

</mapper>